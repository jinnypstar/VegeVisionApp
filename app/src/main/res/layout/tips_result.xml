<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Include the Toolbar -->
    <include
        android:id="@+id/include2"
        layout="@layout/custom_toolbar" />

    <!-- SelectTipsText -->
    <TextView
        android:id="@+id/fruitTips"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="73dp"
        android:fontFamily="@font/notosanskr_light"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/include2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewOf" />

    <!-- VegetableImage -->
    <ImageView
        android:id="@+id/imageViewOf"
        android:layout_width="300dp"
        android:layout_height="200dp"

        android:layout_marginTop="130dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/fruitTips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/beansprouts" />

    <!-- Add your other views here, e.g., TextViews, Buttons, etc. -->

</androidx.constraintlayout.widget.ConstraintLayout>
