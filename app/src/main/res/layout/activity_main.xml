<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vege Vision"
            android:textSize="26sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:textAppearance="?android:textAppearanceMedium" />

    </androidx.appcompat.widget.Toolbar>




    <TextView
        android:id="@+id/SelectPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Select Photo"
        android:textSize="40sp"
        android:textAppearance="?android:textAppearanceLarge"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="75dp" />

    <TextView
        android:id="@+id/explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="농산물 사진을 갤러리에서 업로드하거나\n카메라로 찍어주세요!"
        android:textSize="20sp"
        android:textAppearance="?android:textAppearanceSmall"
        app:layout_constraintTop_toBottomOf="@id/SelectPhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_marginTop="8dp"
        tools:ignore="MissingConstraints" />


<!-- Camera -->

    <Button
        android:id="@+id/CamerBtn"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/shape_for_circle_button"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/explanation"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="60dp"
        android:layout_marginStart="60dp" />

    <ImageView
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_gravity="top|start"
        android:src="@drawable/camera_white"
        android:elevation="4dp"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="327dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/CamerBtn"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="7dp"
        android:layout_marginStart="66dp"
        android:text="카메라"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:gravity="center"
        />



<!-- Gallery -->

    <Button
        android:id="@+id/SelectBtn"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/shape_for_circle_button"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="310dp" />

    <ImageView
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:layout_gravity="top|start"
        android:src="@drawable/gallery_white"
        android:elevation="4dp"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="331dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/SelectBtn"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="65dp"
        android:text="갤러리"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:gravity="center" />


</androidx.constraintlayout.widget.ConstraintLayout>

